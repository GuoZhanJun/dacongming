//switch语句
int main()
{
	int day = 0;
	scanf_s("%d", &day);
	switch (day)//（）内放整型，输入几就从case几进入
	{
	case 1:
		printf("星期一\n");
		break;//break直接让进行完的该段后返回到return 0;
	case 2:
		printf("星期二\n");
		break;
	case 3:
		printf("星期三\n");
		break;
	case 4:
		printf("星期四\n");
		break;
	case 5:
		printf("星期五\n");
		break;
	case 6:
		printf("星期六\n");
		break;
	case 7:
		printf("星期日\n");
		break;
	}
	return 0;
}
