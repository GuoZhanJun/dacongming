int main()
{
	int a = 10;
	char c = 'r';
	char* p = &c;
	int arr[10] = { 0 };
	printf("%d\n", sizeof(a));
	printf("%d\n", sizeof(int));//4

	printf("%d\n",sizeof(c));//1
	printf("%d\n", sizeof(char));

	printf("%d\n", sizeof(p));//8  (32位的大小为4 64位的大小为8)
	printf("%d\n", sizeof(char*));

	printf("%d\n", sizeof(arr));//40
	printf("%d\n", sizeof(int[10]));

	return 0;
}
