//判断一个数是否为奇数，打印1——100内的奇数
#include <stdio.h>//第一种方法
int main()
{
int i = 1;
while(i<=100)
{
if (i%2 ==1)
printf ("%d \n",i);
i++;
}
return 0;
}

int main()//第二种方法
{
	int i = 1;
	while (i <= 100)
	{
		printf("%d \n", i);
		i +=2;
	}

	return 0;
}
//判断一个数是否为偶数，打印1——100内的偶数
int main()//第一种方法
{
	int i = 1;
	while (i <= 100)
	{
		if (i % 2 == 0)
			printf("%d \n", i);
		i++;
	}
	return 0;
}

int main()//第二种方法
{
	int i = 2;
	while (i <= 100)
	{
		printf("%d \n", i);
		i +=2;
	}
	return 0;
}
