//计算n的阶乘
#include <stdio.h>
int main()
{
int i = 0;
int n = 0;
int ret = 1;
scanf("%d\n",&n);
for(i=1;i<=n;i++)
{
ret=ret*i;
}
printf("%d\n",ret);
return 0;
}


//计算1！+2!+3!+...+10!
#include<stdio.h>
int main()
{
int i = 0;
int n = 0;
int ret = 1;
int sum = 0;
for(n=1;n<=10;n++)//创建1-10的数
{
ret=1;//每次循环结束都需要初始化一下ret 
for(i=1;i<=n;i++)
{
ret=ret*i;//求1-10的阶乘
}
sum = sum +ret;
}
printf("sum= %d\n",sum);
return 0;
}
